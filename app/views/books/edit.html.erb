<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
	<% if @book.errors.any? %>
	  <div id="error_explanation" class="alert alert-danger">
	    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
	    <ul>
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
		<div class="filed">
			<div class="filed_with_errors">
				<lavel for="book_title">Title</lavel>
			</div>
			<div class="filed_with_errors">
			<%= f.text_field :title %>
			</div>
	  </div>
		<div class="filed">
			<div class="filed_with_errors">
				<lavel for="book_body">body</lavel>
			</div>
			<div class="filed_with_errors">
			<%= f.text_area :body %>
			</div>
		</div>
	  <div class='actions'>
		<%= f.submit 'Create Book' %>
	  </div>
	 <% else %>
	 <div class="filed">
			<lavel for="book_title">Title</lavel>
			<div><%= f.text_field :title, class: "book_title" %></div>
	</div>
	<div class="filed">
			<lavel for="book_body">body</lavel>
			<div><%= f.text_area :body, class: "book_body"%></div>
	</div>
	<div class='actions'>
		<%= f.submit 'Update Book' %>
	</div>
	<% end %>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
